<div class="actions">
  <%= t 'will_filter.messages.order', default: 'Order'%>:
  <%= select_tag(:wf_order, options_for_select(wf_filter.condition_options, wf_filter.order), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type, options_for_select(wf_filter.order_type_options, wf_filter.order_type), {:onChange=>"markDirty()"}) %>
  <%= t 'will_filter.messages.per_page', default: 'Per Page'%>:
  <%= select_tag(:wf_per_page, options_for_select(wf_filter.per_page_options, wf_filter.per_page.to_s), {:onChange=>"markDirty()"}) %>
  &nbsp;&nbsp;
  <%=link_to_function("<span>#{t 'will_filter.buttons.submit_filter', default: 'Submit Filter...'}</span>".html_safe, "wfFilter.submit()", :class => "wf_grey_button wf_pcb") %>
</div>
<div>
  <%=link_to_function("<span><b>&plus;</b>#{t 'will_filter.buttons.add', default: 'Add'}</span>".html_safe, "wfFilter.addCondition()", :class => "wf_grey_button wf_pcb") %>
  <%=link_to_function("<span>#{t 'will_filter.buttons.clear', default: 'Clear'}</span>".html_safe, "wfFilter.removeAllConditions()", :class => "wf_grey_button wf_pcb") %>
  &nbsp;&nbsp;
  <span id="wf_loader" class="spinner" style="display:none;">
    <%=image_tag "will_filter/spinner.gif" %> <%= t 'will_filter.messages.loading', default: 'Loading...'%>
  </span>
</div>
